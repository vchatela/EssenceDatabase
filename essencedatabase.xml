<?xml version="1.0" encoding="UTF-8"?>
<project name="essencedatabase" default="all">
  
  
  <property file="essencedatabase.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.tox/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.swc"/>
    <include name="*.ane"/>
    <include name="*.egg"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <property name="project.jdk.home" value=""/>
  <property name="project.jdk.bin" value=""/>
  <property name="project.jdk.classpath" value=""/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
  <!-- <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>-->
  <!-- <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>-->
</target>

<!-- Modules -->
  
  
  <!-- Module EssenceDatabase -->
  
  <dirname property="module.essencedatabase.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.essencedatabase" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.essencedatabase" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.essencedatabase" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.essencedatabase" value="-encoding windows-1252 -source 1.6 ${compiler.args}"/>
  
  <property name="essencedatabase.output.dir" value="${module.essencedatabase.basedir}/out/production/EssenceDatabase"/>
  <property name="essencedatabase.testoutput.dir" value="${module.essencedatabase.basedir}/out/test/EssenceDatabase"/>
  
  <path id="essencedatabase.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="essencedatabase.module.production.classpath"/>
  
  <path id="essencedatabase.runtime.production.module.classpath">
    <pathelement location="${essencedatabase.output.dir}"/>
  </path>
  
  <path id="essencedatabase.module.classpath">
    <pathelement location="${essencedatabase.output.dir}"/>
  </path>
  
  <path id="essencedatabase.runtime.module.classpath">
    <pathelement location="${essencedatabase.testoutput.dir}"/>
    <pathelement location="${essencedatabase.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.essencedatabase">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.essencedatabase">
    <patternset refid="excluded.from.module.essencedatabase"/>
  </patternset>
  
  <path id="essencedatabase.module.sourcepath">
    <dirset dir="${module.essencedatabase.basedir}">
      <include name="gen"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.essencedatabase" depends="compile.module.essencedatabase.production,compile.module.essencedatabase.tests" description="Compile module EssenceDatabase"/>
  
  <target name="compile.module.essencedatabase.production" depends="register.custom.compilers" description="Compile module EssenceDatabase; production classes">
    <mkdir dir="${essencedatabase.output.dir}"/>
    <javac destdir="${essencedatabase.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.essencedatabase}/javac">
      <compilerarg line="${compiler.args.essencedatabase}"/>
      <bootclasspath refid="essencedatabase.module.bootclasspath"/>
      <classpath refid="essencedatabase.module.production.classpath"/>
      <src refid="essencedatabase.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.essencedatabase"/>
    </javac>
    
    <copy todir="${essencedatabase.output.dir}">
      <fileset dir="${module.essencedatabase.basedir}/gen">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.essencedatabase.tests" depends="register.custom.compilers,compile.module.essencedatabase.production" description="compile module EssenceDatabase; test classes" unless="skip.tests"/>
  
  <target name="clean.module.essencedatabase" description="cleanup module">
    <delete dir="${essencedatabase.output.dir}"/>
    <delete dir="${essencedatabase.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  <target name="debug" depends="init, clean, compile.module.essencedatabase" description="debug build all"/>
  <target name="clean" depends="clean.module.essencedatabase" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.essencedatabase" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>