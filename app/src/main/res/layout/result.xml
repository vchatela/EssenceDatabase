<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:id="@+id/parent"
              android:background="@drawable/android">
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Welcome, to EssenceDatabase"
            android:id="@+id/textCentral"/>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/RelativeLayout">

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Totaux"
                android:id="@+id/textView12"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_alignParentTop="true" />

        <TextView
                android:layout_width="250dp"
                android:layout_height="25dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Kilométrage Total"
                android:id="@+id/textView16"
                android:layout_column="0"
                android:textSize="17dp"
            android:layout_marginTop="34dp"
            android:layout_below="@+id/textView12"
            android:layout_alignLeft="@+id/textView26"
            android:layout_alignStart="@+id/textView26" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textViewKmTotal"
                android:textAlignment="textEnd"
                android:gravity="right"
                android:layout_above="@+id/textView26"
                android:layout_alignLeft="@+id/buttonRafraichir"
                android:layout_alignStart="@+id/buttonRafraichir"
                android:layout_marginLeft="9dp"
                android:layout_marginStart="9dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Voiture"
                android:id="@+id/textView17"
                android:layout_marginTop="48dp"
                android:layout_below="@+id/textView24"
                android:layout_centerHorizontal="true" />

        <Button
                android:layout_width="180dp"
                android:layout_height="65dp"
                android:id="@+id/buttonRetour"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical|center"
                android:layout_gravity="left"
                android:background="?android:attr/selectableItemBackground"
            android:text="Retour" />

        <TextView
                android:layout_width="250dp"
                android:layout_height="25dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Consommation"
                android:id="@+id/textView20"
                android:textSize="17dp"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/textView22"
                android:layout_alignStart="@+id/textView22"
                android:layout_toLeftOf="@+id/textViewL100"
                android:layout_toStartOf="@+id/textViewL100" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textViewL100"
                android:gravity="right"
                android:layout_above="@+id/textView22"
                android:layout_alignLeft="@+id/buttonRafraichir"
                android:layout_alignStart="@+id/buttonRafraichir" />

        <Button
                android:layout_width="180dp"
                android:layout_height="65dp"
                android:id="@+id/buttonRafraichir"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
            android:layout_gravity="left"
                android:background="?android:attr/selectableItemBackground"
            android:text="Rafraichir"
            android:gravity="center" />

        <TextView
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Prix du Km"
                    android:id="@+id/textView22"
                android:textSize="17dp"
                    android:textColor="#ffffffff"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/textView20"
                android:layout_alignLeft="@+id/textView27"
                android:layout_alignStart="@+id/textView27"
                android:layout_toLeftOf="@+id/textViewPrixKm"
                android:layout_toStartOf="@+id/textViewPrixKm" />

            <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textViewPrixKm"
                android:gravity="right"
                android:layout_alignBaseline="@+id/textView22"
                android:layout_alignBottom="@+id/textView22"
                android:layout_toLeftOf="@+id/textView"
                android:layout_toStartOf="@+id/textView" />

            <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textViewPrixTotal"
                android:layout_alignTop="@+id/textView24"
                android:layout_alignRight="@+id/EssenceTotal"
                android:layout_alignEnd="@+id/EssenceTotal"
                android:gravity="right" />

            <TextView
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Prix Total"
                    android:id="@+id/textView24"
                    android:textSize="17dp"
                    android:textColor="#ffffffff"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/textView26"
                android:layout_alignLeft="@+id/textView20"
                android:layout_alignStart="@+id/textView20" />

            <TextView
                    android:layout_width="380dp"
                    android:layout_height="25dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Depuis : xx/xx/xxxx     avec      X échantillons"
                    android:id="@+id/TextViewInfo"
                android:layout_above="@+id/buttonRetour"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="26dp" />
            <TextView android:layout_width="100dp" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:id="@+id/EssenceTotal"
                android:gravity="right"
                android:layout_alignTop="@+id/textView26"
                android:layout_alignRight="@+id/textViewKmTotal"
                android:layout_alignEnd="@+id/textViewKmTotal" />
            <TextView android:layout_width="250dp" android:layout_height="25dp"
                      android:textAppearance="?android:attr/textAppearanceMedium" android:text="Essence Total"
                      android:id="@+id/textView26" android:textSize="17dp"
                android:layout_marginTop="11dp"
                android:layout_below="@+id/textView16"
                android:layout_alignLeft="@+id/textView24"
                android:layout_alignStart="@+id/textView24" />
            <TextView android:layout_width="250dp" android:layout_height="25dp"
                      android:textAppearance="?android:attr/textAppearanceSmall" android:text="Prix Covoiturage"
                      android:id="@+id/textView27" android:textSize="17dp" android:textColor="#ffffffff"
                android:layout_below="@+id/textView22"
                android:layout_alignLeft="@+id/TextViewInfo"
                android:layout_alignStart="@+id/TextViewInfo"
                android:layout_marginTop="17dp"
                android:layout_alignRight="@+id/textView17"
                android:layout_alignEnd="@+id/textView17" />
            <TextView android:layout_width="100dp" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/PrixCovoit"
                android:gravity="right"
                android:layout_alignBaseline="@+id/textView27"
                android:layout_alignBottom="@+id/textView27"
                android:layout_toLeftOf="@+id/textView5"
                android:layout_toStartOf="@+id/textView5" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView"
            android:text="l/100"
            android:layout_alignTop="@+id/textViewL100"
            android:layout_toRightOf="@+id/textViewPrixTotal"
            android:layout_toEndOf="@+id/textViewPrixTotal" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView3"
            android:text="€"
            android:layout_alignBaseline="@+id/textViewPrixKm"
            android:layout_alignBottom="@+id/textViewPrixKm"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView4"
            android:text="€"
            android:layout_alignTop="@+id/textView27"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView5"
            android:textAlignment="textEnd"
            android:text="km"
            android:layout_alignTop="@+id/textViewKmTotal"
            android:layout_toRightOf="@+id/textViewKmTotal"
            android:layout_toEndOf="@+id/textViewKmTotal"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView6"
            android:textAlignment="textEnd"
            android:text="litres"
            android:layout_alignTop="@+id/EssenceTotal"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView7"
            android:textAlignment="textEnd"
            android:text="€"
            android:layout_alignBaseline="@+id/textViewPrixTotal"
            android:layout_alignBottom="@+id/textViewPrixTotal"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6" />

    </RelativeLayout>

</LinearLayout>

